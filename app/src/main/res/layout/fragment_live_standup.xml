<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_margin="10dp"
        android:padding="10dp"
        android:orientation="vertical">

        <TextView
            android:id="@+id/textview_audio_status"
            android:text="Audio status"
            android:textSize="10sp"
            android:layout_width="match_parent"
            android:layout_height="20dp"
            tools:text="Audio Status"
            tools:visibility="visible"/>

        <Button
            android:id="@+id/button_start_standup"
            android:text="Empezar Stand Up"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"/>

        <TextView
            android:id="@+id/textview_member_speaking"
            android:text="hablando"
            android:textSize="80sp"
            android:gravity="center"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="2"
            android:visibility="gone"
            tools:text="Ahora hablando"
            tools:visibility="visible"/>

        <TextView
            android:id="@+id/textview_timer"
            android:text="timer"
            android:textSize="40sp"
            android:gravity="center"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="2"
            android:visibility="gone"
            android:layout_margin="10dp"
            tools:text="Tiempo restante"/>

        <Button
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:text="Siguiente Participante"
            android:visibility="gone"
            android:textSize="20sp"
            android:id="@+id/stop"
            />

        <Button
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:text="Guardar Minuta"
            android:visibility="gone"
            android:textSize="20sp"
            android:id="@+id/save_minute"
            />

    </LinearLayout>

</android.support.constraint.ConstraintLayout>